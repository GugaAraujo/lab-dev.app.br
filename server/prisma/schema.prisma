datasource db {
    provider = "mongodb"
    url = env("MONGO_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id     String   @id @default(auto()) @map("_id") @db.ObjectId
    email  String   @unique
    name   String
    hash   String
    role    String    @default("USER")
    createdAt  DateTime  @default(now())
    updatedAt  DateTime  @updatedAt
}
